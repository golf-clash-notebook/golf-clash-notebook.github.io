
{% capture holeData %}
  {% for courseHash in site.data.courses %}
    {% assign course = courseHash[1] %}
    {% for hole in course.holes %}
      {{ hole.course }}:{{ hole.number }}
    {% endfor %}
  {% endfor %}
{% endcapture %}

{% assign numHoles = holeData | split: ' ' | size %}

{% capture describedHoleNames %}
  {% for courseHash in site.data.courses %}
    {% assign course = courseHash[1] %}
    {% for hole in course.holes %}
      {% if hole.description == undefined %}
      {% elsif hole.description contains 'Help Wanted' %}
      {% elsif hole.overlays.guides == undefined %}
      {% elsif hole.overlays.guides == empty %}
      {% else %}
        {{ hole.course }}:{{ hole.number }}
      {% endif %}
    {% endfor %}
  {% endfor %}
{% endcapture %}

{% assign describedHoles = describedHoleNames | split: ' ' | size %}
{% assign describedHolePercent = describedHoles | times: 100 | divided_by: numHoles %}

{% include_relative contributing/contributing-status-progress-bar.liquid label='Holes' percentage=describedHolePercent value=describedHoles max=numHoles %}
