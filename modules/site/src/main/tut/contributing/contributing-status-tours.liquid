
{% assign numTours = site.data.tours | size %}

{% capture describedTourNumbers %}
  {% for tourHash in site.data.tours %}

    {% assign tour = tourHash[1] %}

    {% if tour.description contains 'Help Wanted' %}
    {% else %}
      {{ tour.number }}
    {% endif %}
  {% endfor %}
{% endcapture %}

{% assign describedTours = describedTourNumbers | split: ' ' | size %}
{% assign describedTourPercent = describedTours | times: 100 | divided_by: numTours %}

{% include_relative contributing/contributing-status-progress-bar.liquid label='Tours' percentage=describedTourPercent value=describedTours max=numTours %}
