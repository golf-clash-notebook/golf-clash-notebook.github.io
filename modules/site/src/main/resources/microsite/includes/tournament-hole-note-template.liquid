
{% assign holeCoursePath = include.hole.course | remove: " " %}
{% assign holeCourseIx = include.hole.course-hole | minus: 1 %}
{% assign courseHole = site.data.courses[holeCoursePath].holes[holeCourseIx] %}

<div class="col-lg-6 note-col">
  <div class="paper text-left margin-4">
    <h4 class="note-hole-title text-semi-muted">Hole {{ include.hole.number }} - Par {{ courseHole.par }}</h4>
    <img class="note-hole-thumbnail img-responsive" src="/img/golfclash/courses/{{ holeCoursePath }}/{{ courseHole.number }}.png">
  </div>
</div>
