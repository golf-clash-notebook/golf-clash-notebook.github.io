
{% assign numBalls = site.data.balls | size %}

{% capture describedBallNames %}
  {% for ballHash in site.data.balls %}
    {% if ballHash[1].description contains 'Help Wanted' %}
    {% else %}
      BallIsDescribed
    {% endif %}
  {% endfor %}
{% endcapture %}

{% assign describedBalls = describedBallNames | split: ' ' | size %}
{% assign describedBallPercent = describedBalls | times: 100 | divided_by: numBalls %}

{% include contributing/status-progress-bar.liquid label='Balls' percentage=describedBallPercent value=describedBalls max=numBalls %}
